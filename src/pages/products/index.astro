---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";
import "../../styles/pages/catalog.css";
import { getProducts, getCategories } from "../../data/products";
import type { Product } from "../../data/products";
import { generateBreadcrumbSchema } from "../../utils/seo";

const products = await getProducts();
const categories = await getCategories();

const url = Astro.url;
const currentPage = Math.max(1, Number(url.searchParams.get("page")) || 1);
const totalProducts = products.length;

const presentationOptions = Array.from(
  new Set(
    products.flatMap((product) =>
      product.presentations.map((presentation) => presentation.label),
    ),
  ),
).sort((a, b) => {
  const liquidUnits = [
    "l",
    "lt",
    "litro",
    "litros",
    "ml",
    "galón",
    "galon",
    "galones",
  ];
  const aLower = a.toLowerCase();
  const bLower = b.toLowerCase();

  const aIsLiquid = liquidUnits.some((unit) => aLower.includes(unit));
  const bIsLiquid = liquidUnits.some((unit) => bLower.includes(unit));

  if (aIsLiquid && !bIsLiquid) return 1;
  if (!aIsLiquid && bIsLiquid) return -1;

  return a.localeCompare(b, "es-PE", { sensitivity: "base", numeric: true });
});

const baseUrl = "https://www.quimicaindustrial.pe/products";
const canonicalUrl = baseUrl;

const pageTitle = "Catálogo de productos químicos | Química Industrial";
const pageDescription =
  "Explora químicos industriales, solventes, ácidos y materias primas disponibles en todo el Perú. Filtra por categoría, presentación o popularidad.";

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Inicio", url: "https://www.quimicaindustrial.pe" },
  { name: "Productos" },
]);
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical={canonicalUrl}
>
  <Fragment slot="head">
    <meta
      name="keywords"
      content="catálogo químicos industriales, materias primas Perú, solventes industriales, ácidos químicos, reactivos químicos Perú, productos químicos mayorista"
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "CollectionPage",
        name: pageTitle,
        description: pageDescription,
        url: canonicalUrl,
        isPartOf: {
          "@type": "WebSite",
          name: "Química Industrial",
          url: "https://www.quimicaindustrial.pe",
        },
      })}
    />
    <script
      type="application/ld+json"
      set:html={JSON.stringify(breadcrumbSchema)}
    />
  </Fragment>
  <section class="catalog">
    <header class="catalog-header">
      <div>
        <span class="tag">Catálogo completo</span>
        <h1>Encuentra el químico que necesitas</h1>
        <p>
          Explora nuestro catálogo de materias primas químicas. Utiliza los
          filtros para encontrar lo que buscas.
        </p>
        <div class="catalog-info-box">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z"
              stroke="currentColor"
              stroke-width="2"></path>
            <path
              d="M12 16V12M12 8H12.01"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"></path>
          </svg>
          <p>
            <strong>¿Cómo cotizar?</strong> Añade productos a tu carrito de favoritos
            y solicita tu cotización personalizada.
          </p>
        </div>
      </div>
    </header>

    <div class="catalog-layout">
      <aside class="catalog-sidebar" data-sidebar>
        <div class="sidebar-header">
          <h2>Filtros</h2>
          <button
            type="button"
            class="sidebar-toggle"
            data-sidebar-toggle
            aria-label="Toggle filters"
            aria-expanded="false"
          >
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M6 9l6 6 6-6"></path>
            </svg>
          </button>
        </div>
        <form class="filter-form" data-filter-form>
          <fieldset>
            <legend>Categorías ({categories.length})</legend>
            {
              categories.length ? (
                categories.map((category) => (
                  <label class="checkbox">
                    <input
                      type="checkbox"
                      value={category.id}
                      data-filter-category
                    />
                    <span>{category.name}</span>
                  </label>
                ))
              ) : (
                <p class="filter-empty">Aún no hay categorías para filtrar.</p>
              )
            }
          </fieldset>

          <fieldset>
            <legend>Presentaciones ({presentationOptions.length})</legend>
            {
              presentationOptions.length ? (
                presentationOptions.map((presentation) => (
                  <label class="checkbox">
                    <input
                      type="checkbox"
                      value={presentation}
                      data-filter-presentation
                    />
                    <span>{presentation}</span>
                  </label>
                ))
              ) : (
                <p class="filter-empty">
                  Los productos no incluyen presentaciones.
                </p>
              )
            }
          </fieldset>

          <button type="reset" class="btn btn-outline">Limpiar filtros</button>
        </form>
      </aside>

      <div class="catalog-main">
        <div class="catalog-toolbar">
          <div class="toolbar-controls">
            <div class="view-toggle-group">
              <span
                style="font-weight: 600; font-size: 0.875rem; color: #0f172a;"
                >Vista</span
              >
              <div>
                <button
                  type="button"
                  data-view-toggle
                  data-view="grid"
                  aria-label="Vista de cuadrícula"
                  aria-pressed="true"
                  class="is-active"
                >
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                  </svg>
                </button>
                <button
                  type="button"
                  data-view-toggle
                  data-view="list"
                  aria-label="Vista de lista"
                  aria-pressed="false"
                >
                  <svg
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="8" y1="6" x2="21" y2="6"></line>
                    <line x1="8" y1="12" x2="21" y2="12"></line>
                    <line x1="8" y1="18" x2="21" y2="18"></line>
                    <line x1="3" y1="6" x2="3.01" y2="6"></line>
                    <line x1="3" y1="12" x2="3.01" y2="12"></line>
                    <line x1="3" y1="18" x2="3.01" y2="18"></line>
                  </svg>
                </button>
              </div>
            </div>
            <label>
              Ordenar por
              <select data-filter-sort>
                <option value="alpha">Nombre (A-Z)</option>
                <option value="popular">Popularidad</option>
                <option value="newest">Más recientes</option>
                <option value="oldest">Más antiguos</option>
              </select>
            </label>
            <label>
              Productos por página
              <select data-filter-per-page>
                <option value="9" selected>9</option>
                <option value="18">18</option>
                <option value="36">36</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="9999">Todos</option>
              </select>
            </label>
          </div>
          <div class="search-group">
            <label class="sr-only" for="catalog-search">Buscar productos</label>
            <input
              id="catalog-search"
              type="search"
              placeholder="Busca por nombre o uso"
              data-filter-search
            />
          </div>
        </div>

        <p class="catalog-result" data-result-count>
          Mostrando {totalProducts} productos
        </p>

        <div class="product-grid" data-product-grid>
          {
            products.map((product) => {
              const primaryPresentation = product.presentations[0];
              const categoryNames = product.categories
                .map(
                  (categoryId) =>
                    categories.find((item) => item.id === categoryId)?.name ??
                    categoryId,
                )
                .join(" ");
              const presentationLabels = product.presentations
                .map((presentation) => presentation.label)
                .join(" ");
              const searchIndex = [
                product.name,
                product.summary,
                categoryNames,
                presentationLabels,
              ]
                .filter(Boolean)
                .join(" ");
              return (
                <article
                  class="product-card"
                  data-product-card
                  data-sort-name={product.name}
                  data-search-index={searchIndex}
                  data-popularity={product.popularity}
                  data-date={product.createdAt}
                  data-categories={product.categories.map(String).join(",")}
                  data-presentations={product.presentations
                    .map((item) => item.label)
                    .join(",")}
                >
                  <div class="product-image">
                    {product.image ? (
                      <img
                        src={product.image}
                        alt={`Imagen de ${product.name}`}
                        loading="lazy"
                      />
                    ) : (
                      <div class="image-fallback" aria-hidden="true" />
                    )}
                  </div>
                  <div class="product-body">
                    <h3>{product.name}</h3>
                    {product.summary && (
                      <p class="product-summary">{product.summary}</p>
                    )}
                    {product.presentations.length > 0 && (
                      <div class="product-presentations-list">
                        {product.presentations
                          .slice(0, 3)
                          .map((presentation) => (
                            <span class="presentation-badge">
                              {presentation.label}
                            </span>
                          ))}
                        {product.presentations.length > 3 && (
                          <span class="presentation-badge">
                            +{product.presentations.length - 3}
                          </span>
                        )}
                      </div>
                    )}
                  </div>
                  <div class="product-actions">
                    <a
                      class="btn btn-outline"
                      href={`/products/${product.slug}`}
                      data-view-product
                      data-product-id={product.id}
                      data-product-name={product.name}
                      data-product-slug={product.slug}
                    >
                      Ver más
                    </a>
                    <button
                      class="btn btn-primary"
                      type="button"
                      data-action="add-to-cart"
                      data-product-id={product.id}
                      data-product-name={product.name}
                      data-product-slug={product.slug}
                      data-product-presentation={
                        primaryPresentation?.label || ""
                      }
                      data-presentation-id={primaryPresentation?.id || ""}
                      data-product-image={product.image}
                      data-product-price={product.price ?? ""}
                      data-product-price-text={product.priceText ?? ""}
                      data-product-stock-status={product.stockStatus}
                    >
                      Agregar
                    </button>
                  </div>
                </article>
              );
            })
          }
        </div>

        {
          !products.length && (
            <p class="empty-state">
              No hay productos disponibles en este momento.
            </p>
          )
        }

        <nav
          class="pagination"
          data-pagination
          aria-label="Paginación de productos"
        >
        </nav>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const grid = document.querySelector<HTMLElement>("[data-product-grid]");
    if (!grid) return;

    const normalizeText = (value: unknown): string =>
      String(value ?? "")
        .toLowerCase()
        .normalize("NFD")
        .replace(/[\u0300-\u036f]/g, "");

    const cards = Array.from(
      grid.querySelectorAll<HTMLElement>("[data-product-card]"),
    ).map((element) => ({
      element,
      rawName: element.getAttribute("data-sort-name") || "",
      searchIndex: normalizeText(
        element.getAttribute("data-search-index") || "",
      ),
      categories: (element.getAttribute("data-categories") || "")
        .split(",")
        .filter(Boolean),
      presentations: (element.getAttribute("data-presentations") || "")
        .split(",")
        .filter(Boolean),
      popularity: Number(element.getAttribute("data-popularity") || "0"),
      date: element.getAttribute("data-date") || "",
    }));

    const perPageSelect = document.querySelector("[data-filter-per-page]");
    const initialPerPage =
      perPageSelect && "value" in perPageSelect
        ? Number(perPageSelect.value)
        : 9;

    const state = {
      search: "",
      searchNormalized: "",
      categories: new Set(),
      presentations: new Set(),
      sort: "alpha",
      perPage:
        Number.isFinite(initialPerPage) && initialPerPage > 0
          ? initialPerPage
          : 9,
      currentPage: 1,
    };

    const resultCount = document.querySelector("[data-result-count]");
    const pagination = document.querySelector("[data-pagination]");

    const filterForm = document.querySelector("[data-filter-form]");
    const searchInput = document.querySelector("[data-filter-search]");
    const sortSelect = document.querySelector("[data-filter-sort]");

    const applyFilters = () => {
      const term = state.searchNormalized.trim();
      return cards.filter((card) => {
        const matchesSearch = !term || card.searchIndex.includes(term);
        const matchesCategory =
          !state.categories.size ||
          card.categories.some((category) => state.categories.has(category));
        const matchesPresentation =
          !state.presentations.size ||
          card.presentations.some((presentation) =>
            state.presentations.has(presentation),
          );
        return matchesSearch && matchesCategory && matchesPresentation;
      });
    };

    const sortCards = (data: typeof cards) => {
      const sorted = [...data];
      switch (state.sort) {
        case "alpha":
          sorted.sort((a, b) =>
            a.rawName.localeCompare(b.rawName, "es-PE", {
              sensitivity: "base",
            }),
          );
          break;
        case "popular":
          sorted.sort((a, b) => b.popularity - a.popularity);
          break;
        case "newest":
          sorted.sort((a, b) => (b.date || "").localeCompare(a.date || ""));
          break;
        case "oldest":
          sorted.sort((a, b) => (a.date || "").localeCompare(b.date || ""));
          break;
        default:
          break;
      }
      return sorted;
    };

    const render = () => {
      const filtered = sortCards(applyFilters());
      const totalItems = filtered.length;
      const totalPages = Math.max(1, Math.ceil(totalItems / state.perPage));

      if (state.currentPage > totalPages) {
        state.currentPage = totalPages;
      }

      const start = (state.currentPage - 1) * state.perPage;
      const end = start + state.perPage;

      filtered.forEach((item, index) => {
        const isVisible = index >= start && index < end;
        item.element.style.display = isVisible ? "" : "none";
        if (isVisible) {
          grid.appendChild(item.element);
        }
      });

      cards.forEach((card) => {
        if (!filtered.includes(card)) {
          card.element.style.display = "none";
        }
      });

      if (resultCount) {
        if (!totalItems) {
          resultCount.textContent = "No encontramos productos con esos filtros";
        } else {
          const visibleStart = Math.min(start + 1, totalItems);
          const visibleEnd = Math.min(end, totalItems);
          resultCount.textContent = `Mostrando ${visibleStart}-${visibleEnd} de ${totalItems} productos`;
        }
      }

      if (pagination) {
        pagination.innerHTML = "";
        if (totalPages <= 1) {
          pagination.setAttribute("hidden", "");
        } else {
          pagination.removeAttribute("hidden");

          const buildButton = (
            label: string,
            page: number,
            disabled = false,
            isEllipsis = false,
          ) => {
            const button = document.createElement("button");
            button.type = "button";
            button.textContent = label;
            button.dataset.page = String(page);
            button.disabled = disabled || isEllipsis;
            if (page === state.currentPage) {
              button.classList.add("is-active");
            }
            if (isEllipsis) {
              button.classList.add("is-ellipsis");
            }
            return button;
          };

          // Previous button
          pagination.appendChild(
            buildButton("←", state.currentPage - 1, state.currentPage === 1),
          );

          // Smart pagination with ellipsis
          const maxVisible = 7;
          if (totalPages <= maxVisible) {
            // Show all pages
            for (let page = 1; page <= totalPages; page += 1) {
              pagination.appendChild(buildButton(String(page), page));
            }
          } else {
            // Show first page
            pagination.appendChild(buildButton("1", 1));

            // Calculate range around current page
            let startPage = Math.max(2, state.currentPage - 1);
            let endPage = Math.min(totalPages - 1, state.currentPage + 1);

            // Adjust if near start
            if (state.currentPage <= 3) {
              endPage = 4;
            }

            // Adjust if near end
            if (state.currentPage >= totalPages - 2) {
              startPage = totalPages - 3;
            }

            // Left ellipsis
            if (startPage > 2) {
              pagination.appendChild(
                buildButton("...", startPage - 1, false, true),
              );
            }

            // Middle pages
            for (let page = startPage; page <= endPage; page += 1) {
              pagination.appendChild(buildButton(String(page), page));
            }

            // Right ellipsis
            if (endPage < totalPages - 1) {
              pagination.appendChild(
                buildButton("...", endPage + 1, false, true),
              );
            }

            // Show last page
            pagination.appendChild(buildButton(String(totalPages), totalPages));
          }

          // Next button
          pagination.appendChild(
            buildButton(
              "→",
              state.currentPage + 1,
              state.currentPage === totalPages,
            ),
          );
        }
      }
    };

    // Check for category parameter in URL and pre-select it
    const urlParams = new URLSearchParams(window.location.search);
    const categoryParam = urlParams.get("category");

    const searchParam = urlParams.get("search") || urlParams.get("q");

    if (categoryParam) {
      // Add category to state before first render
      state.categories.add(categoryParam);
      // Check the checkbox
      const categoryCheckbox = document.querySelector(
        `[data-filter-category][value="${categoryParam}"]`,
      );
      if (categoryCheckbox instanceof HTMLInputElement) {
        categoryCheckbox.checked = true;
      }
    }

    if (typeof searchParam === "string" && searchParam.trim()) {
      state.search = searchParam;
      state.searchNormalized = normalizeText(searchParam);
      state.currentPage = 1;
      if (searchInput instanceof HTMLInputElement) {
        searchInput.value = searchParam;
      }
    }

    render();

    filterForm?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLInputElement)) return;

      if (target.matches("[data-filter-category]")) {
        if (target.checked) {
          state.categories.add(target.value);
        } else {
          state.categories.delete(target.value);
        }
        state.currentPage = 1;
        render();
      }

      if (target.matches("[data-filter-presentation]")) {
        if (target.checked) {
          state.presentations.add(target.value);
        } else {
          state.presentations.delete(target.value);
        }
        state.currentPage = 1;
        render();
      }
    });

    filterForm?.addEventListener("reset", () => {
      state.categories.clear();
      state.presentations.clear();
      state.currentPage = 1;
      state.search = "";
      state.searchNormalized = "";
      if (searchInput instanceof HTMLInputElement) {
        searchInput.value = "";
      }
      render();
    });

    searchInput?.addEventListener("input", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLInputElement)) return;
      state.search = target.value;
      state.searchNormalized = normalizeText(target.value);
      state.currentPage = 1;
      render();
    });

    sortSelect?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLSelectElement)) return;
      state.sort = target.value;
      state.currentPage = 1;
      render();
    });

    perPageSelect?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLSelectElement)) return;
      const nextPerPage = Number(target.value);
      state.perPage =
        Number.isFinite(nextPerPage) && nextPerPage > 0 ? nextPerPage : 9;
      state.currentPage = 1;
      render();
    });

    pagination?.addEventListener("click", (event) => {
      const target =
        event.target instanceof Element ? event.target.closest("button") : null;
      if (!target) return;
      const desiredPage = Number(target.dataset.page);
      if (!Number.isNaN(desiredPage) && desiredPage > 0) {
        const hasActiveFilters =
          state.categories.size > 0 ||
          state.presentations.size > 0 ||
          state.search.trim() !== "";

        if (hasActiveFilters) {
          state.currentPage = Math.min(
            Math.max(desiredPage, 1),
            Math.max(1, Math.ceil(applyFilters().length / state.perPage)),
          );
          render();
          window.scrollTo({ top: 0, behavior: "smooth" });
        } else {
          const url = new URL(window.location.href);
          if (desiredPage === 1) {
            url.searchParams.delete("page");
          } else {
            url.searchParams.set("page", String(desiredPage));
          }
          window.location.href = url.toString();
        }
      }
    });

    // Mobile sidebar toggle
    const sidebarToggle = document.querySelector("[data-sidebar-toggle]");
    const sidebar = document.querySelector("[data-sidebar]");

    sidebarToggle?.addEventListener("click", () => {
      const isExpanded = sidebarToggle.getAttribute("aria-expanded") === "true";
      sidebarToggle.setAttribute("aria-expanded", String(!isExpanded));
      sidebar?.classList.toggle("is-collapsed");
    });

    // Auto-collapse on mobile on load
    const checkMobile = () => {
      if (
        window.innerWidth <= 768 &&
        sidebar &&
        !sidebar.classList.contains("is-collapsed")
      ) {
        sidebar.classList.add("is-collapsed");
        sidebarToggle?.setAttribute("aria-expanded", "false");
      }
    };

    // View toggle functionality
    const productGrid = document.querySelector("[data-product-grid]");

    const applyView = (view: "grid" | "list") => {
      if (!productGrid) return;

      productGrid.classList.toggle("is-list", view === "list");

      const buttons = Array.from(
        document.querySelectorAll<HTMLButtonElement>("[data-view-toggle]"),
      );
      buttons.forEach((btn) => {
        const isActive = btn.dataset.view === view;
        btn.classList.toggle("is-active", isActive);
        btn.setAttribute("aria-pressed", String(isActive));
      });

      try {
        window.localStorage.setItem("catalogView", view);
      } catch {
        // ignore
      }
    };

    const savedView = (() => {
      try {
        return window.localStorage.getItem("catalogView");
      } catch {
        return null;
      }
    })();

    if (savedView === "list" || savedView === "grid") {
      applyView(savedView);
    }

    document.addEventListener("click", (event) => {
      const target =
        event.target instanceof Element
          ? event.target.closest<HTMLButtonElement>("[data-view-toggle]")
          : null;
      if (!target) return;
      const view = target.dataset.view;
      if (view === "grid" || view === "list") {
        applyView(view);
      }
    });

    // GTM Event: Track "Ver más" clicks
    document.addEventListener("click", (event) => {
      const target =
        event.target instanceof Element
          ? event.target.closest("[data-view-product]")
          : null;
      if (!target) return;

      const productId = target.getAttribute("data-product-id");
      const productName = target.getAttribute("data-product-name");
      const productSlug = target.getAttribute("data-product-slug");

      if (productId && productName) {
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
          event: "view_product",
          product_id: productId,
          product_name: productName,
          product_slug: productSlug,
          page_type: "product_catalog",
        });
      }
    });
  });
</script>
