---
import Layout from "../../layouts/Layout.astro";
import "../../styles/pages/catalog.css";
import { getProducts, getCategories } from "../../data/products";
import type { Product } from "../../data/products";

const products = await getProducts();
const categories = await getCategories();
const presentationOptions = Array.from(
  new Set(
    products.flatMap((product) =>
      product.presentations.map((presentation) => presentation.label),
    ),
  ),
).sort((a, b) => a.localeCompare(b, "es-PE", { sensitivity: "base" }));

const STOCK_LABELS = {
  instock: "En stock",
  outofstock: "Agotado",
  onbackorder: "Disponible bajo pedido",
} as const;

const getStockLabel = (status: string) =>
  STOCK_LABELS[status as keyof typeof STOCK_LABELS] ??
  "Consultar disponibilidad";

const getStockClass = (status: string) => {
  switch (status) {
    case "instock":
      return "is-available";
    case "onbackorder":
      return "is-backorder";
    case "outofstock":
      return "is-unavailable";
    default:
      return "is-unknown";
  }
};

const getPriceText = (product: Product) =>
  product.priceText ?? "Consultar precio";
---

<Layout
  title="Catálogo de productos químicos | Química Industrial"
  description="Explora químicos industriales, solventes, ácidos y materias primas disponibles en Lima, Perú. Filtra por categoría, presentación o popularidad."
  canonical="https://www.quimicaindustrial.pe/products"
>
  <section class="catalog">
    <div class="container">
      <header class="catalog-header">
        <div>
          <span class="tag">Catálogo completo</span>
          <h1>Encuentra el químico que necesitas</h1>
          <p>
            Los siguientes productos provienen directamente de la API de
            WooCommerce. Utiliza los filtros para encontrar la materia prima que
            necesitas y arma tu cotización.
          </p>
        </div>
        <a class="btn btn-primary" href="/cotizacion">Solicitar cotización</a>
      </header>
    </div>

    <div class="container catalog-layout">
      <aside class="catalog-sidebar">
        <h2>Filtros</h2>
        <form class="filter-form" data-filter-form>
          <fieldset>
            <legend>Categorías</legend>
            {
              categories.length ? (
                categories.map((category) => (
                  <label class="checkbox">
                    <input
                      type="checkbox"
                      value={category.id}
                      data-filter-category
                    />
                    <span>{category.name}</span>
                  </label>
                ))
              ) : (
                <p class="filter-empty">Aún no hay categorías para filtrar.</p>
              )
            }
          </fieldset>

          <fieldset>
            <legend>Presentaciones</legend>
            {
              presentationOptions.length ? (
                presentationOptions.map((presentation) => (
                  <label class="checkbox">
                    <input
                      type="checkbox"
                      value={presentation}
                      data-filter-presentation
                    />
                    <span>{presentation}</span>
                  </label>
                ))
              ) : (
                <p class="filter-empty">
                  Los productos no incluyen presentaciones.
                </p>
              )
            }
          </fieldset>

          <button type="reset" class="btn btn-outline">Limpiar filtros</button>
        </form>
      </aside>

      <div class="catalog-main">
        <div class="catalog-toolbar">
          <div class="search-group">
            <label class="sr-only" for="catalog-search">Buscar productos</label>
            <input
              id="catalog-search"
              type="search"
              placeholder="Busca por nombre o uso"
              data-filter-search
            />
          </div>
          <div class="toolbar-controls">
            <label>
              Ordenar por
              <select data-filter-sort>
                <option value="alpha">Nombre (A-Z)</option>
                <option value="popular">Popularidad</option>
                <option value="newest">Más recientes</option>
                <option value="oldest">Más antiguos</option>
              </select>
            </label>
            <label>
              Productos por página
              <select data-filter-per-page>
                <option value="6">6</option>
                <option value="9" selected>9</option>
                <option value="12">12</option>
                <option value="18">18</option>
              </select>
            </label>
          </div>
        </div>

        <p class="catalog-result" data-result-count>
          Mostrando {products.length} productos
        </p>

        <div class="product-grid" data-product-grid>
          {
            products.map((product) => {
              const primaryPresentation = product.presentations[0];
              const categoryNames = product.categories
                .map(
                  (categoryId) =>
                    categories.find((item) => item.id === categoryId)?.name ??
                    categoryId,
                )
                .join(" ");
              const presentationLabels = product.presentations
                .map((presentation) => presentation.label)
                .join(" ");
              const searchIndex = [
                product.name,
                product.summary,
                categoryNames,
                presentationLabels,
              ]
                .filter(Boolean)
                .join(" ");
              return (
                <article
                  class="card product-card"
                  data-product-card
                  data-sort-name={product.name}
                  data-search-index={searchIndex}
                  data-popularity={product.popularity}
                  data-date={product.createdAt}
                  data-categories={product.categories.join(",")}
                  data-presentations={product.presentations
                    .map((item) => item.label)
                    .join(",")}
                >
                  <div class="product-image">
                    {product.image ? (
                      <img
                        src={product.image}
                        alt={`Imagen de ${product.name}`}
                        loading="lazy"
                      />
                    ) : (
                      <div class="image-fallback" aria-hidden="true" />
                    )}
                  </div>
                  <div class="product-body">
                    <div class="product-meta">
                      {product.categories.map((categoryId) => {
                        const category = categories.find(
                          (item) => item.id === categoryId,
                        );
                        return (
                          <span class="tag">
                            {category?.name ?? categoryId}
                          </span>
                        );
                      })}
                    </div>
                    <h3>{product.name}</h3>
                    {product.summary && <p>{product.summary}</p>}
                    {product.presentations.length > 0 && (
                      <ul class="product-presentations">
                        {product.presentations.map((presentation) => (
                          <li>{presentation.label}</li>
                        ))}
                      </ul>
                    )}
                    <div class="product-pricing">
                      <span class="price">{getPriceText(product)}</span>
                      <span
                        class={`stock ${getStockClass(product.stockStatus)}`}
                      >
                        {getStockLabel(product.stockStatus)}
                      </span>
                    </div>
                  </div>
                  <div class="product-actions">
                    <a
                      class="btn btn-outline"
                      href={`/products/${product.slug}`}
                    >
                      Ver más
                    </a>
                    <button
                      class="btn btn-primary"
                      type="button"
                      data-action="add-to-cart"
                      data-product-id={product.id}
                      data-product-name={product.name}
                      data-product-slug={product.slug}
                      data-product-presentation={
                        primaryPresentation?.label || ""
                      }
                      data-presentation-id={primaryPresentation?.id || ""}
                      data-product-image={product.image}
                      data-product-price={product.price ?? ""}
                      data-product-price-text={product.priceText ?? ""}
                      data-product-stock-status={product.stockStatus}
                    >
                      Agregar
                    </button>
                  </div>
                </article>
              );
            })
          }
        </div>

        {
          !products.length && (
            <p class="empty-state">
              No hay productos disponibles en este momento.
            </p>
          )
        }

        <nav
          class="pagination"
          data-pagination
          aria-label="Paginación de productos"
        >
        </nav>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const grid = document.querySelector("[data-product-grid]");
    if (!grid) return;

    const normalizeText = (value) =>
      (value || "")
        .toString()
        .toLowerCase()
        .normalize("NFD")
        .replace(/[\u0300-\u036f]/g, "");

    const cards = Array.from(grid.querySelectorAll("[data-product-card]")).map(
      (element) => ({
        element,
        rawName: element.getAttribute("data-sort-name") || "",
        searchIndex: normalizeText(
          element.getAttribute("data-search-index") || "",
        ),
        categories: (element.getAttribute("data-categories") || "")
          .split(",")
          .filter(Boolean),
        presentations: (element.getAttribute("data-presentations") || "")
          .split(",")
          .filter(Boolean),
        popularity: Number(element.getAttribute("data-popularity") || "0"),
        date: element.getAttribute("data-date") || "",
      }),
    );

    const perPageSelect = document.querySelector("[data-filter-per-page]");
    const initialPerPage =
      perPageSelect && "value" in perPageSelect
        ? Number(perPageSelect.value)
        : 9;

    const state = {
      search: "",
      searchNormalized: "",
      categories: new Set(),
      presentations: new Set(),
      sort: "alpha",
      perPage:
        Number.isFinite(initialPerPage) && initialPerPage > 0
          ? initialPerPage
          : 9,
      currentPage: 1,
    };

    const resultCount = document.querySelector("[data-result-count]");
    const pagination = document.querySelector("[data-pagination]");

    const filterForm = document.querySelector("[data-filter-form]");
    const searchInput = document.querySelector("[data-filter-search]");
    const sortSelect = document.querySelector("[data-filter-sort]");

    const applyFilters = () => {
      const term = state.searchNormalized.trim();
      return cards.filter((card) => {
        const matchesSearch = !term || card.searchIndex.includes(term);
        const matchesCategory =
          !state.categories.size ||
          card.categories.some((category) => state.categories.has(category));
        const matchesPresentation =
          !state.presentations.size ||
          card.presentations.some((presentation) =>
            state.presentations.has(presentation),
          );
        return matchesSearch && matchesCategory && matchesPresentation;
      });
    };

    const sortCards = (data) => {
      const sorted = [...data];
      switch (state.sort) {
        case "alpha":
          sorted.sort((a, b) =>
            a.rawName.localeCompare(b.rawName, "es-PE", {
              sensitivity: "base",
            }),
          );
          break;
        case "popular":
          sorted.sort((a, b) => b.popularity - a.popularity);
          break;
        case "newest":
          sorted.sort((a, b) => (b.date || "").localeCompare(a.date || ""));
          break;
        case "oldest":
          sorted.sort((a, b) => (a.date || "").localeCompare(b.date || ""));
          break;
        default:
          break;
      }
      return sorted;
    };

    const render = () => {
      const filtered = sortCards(applyFilters());
      const totalItems = filtered.length;
      const totalPages = Math.max(1, Math.ceil(totalItems / state.perPage));

      if (state.currentPage > totalPages) {
        state.currentPage = totalPages;
      }

      const start = (state.currentPage - 1) * state.perPage;
      const end = start + state.perPage;

      filtered.forEach((item, index) => {
        const isVisible = index >= start && index < end;
        item.element.style.display = isVisible ? "" : "none";
        if (isVisible) {
          grid.appendChild(item.element);
        }
      });

      cards.forEach((card) => {
        if (!filtered.includes(card)) {
          card.element.style.display = "none";
        }
      });

      if (resultCount) {
        if (!totalItems) {
          resultCount.textContent = "No encontramos productos con esos filtros";
        } else {
          const visibleStart = Math.min(start + 1, totalItems);
          const visibleEnd = Math.min(end, totalItems);
          resultCount.textContent = `Mostrando ${visibleStart}-${visibleEnd} de ${totalItems} productos`;
        }
      }

      if (pagination) {
        pagination.innerHTML = "";
        if (totalPages <= 1) {
          pagination.setAttribute("hidden", "");
        } else {
          pagination.removeAttribute("hidden");

          const buildButton = (label, page, disabled = false) => {
            const button = document.createElement("button");
            button.type = "button";
            button.textContent = label;
            button.dataset.page = String(page);
            button.disabled = disabled;
            if (page === state.currentPage) {
              button.classList.add("is-active");
            }
            return button;
          };

          pagination.appendChild(
            buildButton(
              "Anterior",
              state.currentPage - 1,
              state.currentPage === 1,
            ),
          );

          for (let page = 1; page <= totalPages; page += 1) {
            pagination.appendChild(buildButton(String(page), page));
          }

          pagination.appendChild(
            buildButton(
              "Siguiente",
              state.currentPage + 1,
              state.currentPage === totalPages,
            ),
          );
        }
      }
    };

    render();

    filterForm?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLInputElement)) return;

      if (target.matches("[data-filter-category]")) {
        if (target.checked) {
          state.categories.add(target.value);
        } else {
          state.categories.delete(target.value);
        }
        state.currentPage = 1;
        render();
      }

      if (target.matches("[data-filter-presentation]")) {
        if (target.checked) {
          state.presentations.add(target.value);
        } else {
          state.presentations.delete(target.value);
        }
        state.currentPage = 1;
        render();
      }
    });

    filterForm?.addEventListener("reset", () => {
      state.categories.clear();
      state.presentations.clear();
      state.currentPage = 1;
      state.search = "";
      state.searchNormalized = "";
      if (searchInput instanceof HTMLInputElement) {
        searchInput.value = "";
      }
      render();
    });

    searchInput?.addEventListener("input", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLInputElement)) return;
      state.search = target.value;
      state.searchNormalized = normalizeText(target.value);
      state.currentPage = 1;
      render();
    });

    sortSelect?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLSelectElement)) return;
      state.sort = target.value;
      state.currentPage = 1;
      render();
    });

    perPageSelect?.addEventListener("change", (event) => {
      const target = event.target;
      if (!(target instanceof HTMLSelectElement)) return;
      const nextPerPage = Number(target.value);
      state.perPage =
        Number.isFinite(nextPerPage) && nextPerPage > 0 ? nextPerPage : 9;
      state.currentPage = 1;
      render();
    });

    pagination?.addEventListener("click", (event) => {
      const target =
        event.target instanceof Element ? event.target.closest("button") : null;
      if (!target) return;
      const desiredPage = Number(target.dataset.page);
      if (!Number.isNaN(desiredPage)) {
        state.currentPage = Math.min(
          Math.max(desiredPage, 1),
          Math.max(1, Math.ceil(applyFilters().length / state.perPage)),
        );
        render();
      }
    });
  });
</script>
