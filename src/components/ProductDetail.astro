---
import type { Product, ProductCategory } from "../data/products";

interface Props {
  product: Product;
  categories: ProductCategory[];
}

const { product, categories } = Astro.props;

const productCategories = product.categories
  .map((categoryId) =>
    categories.find((category) => category.id === categoryId),
  )
  .filter(Boolean);

const STOCK_LABELS = {
  instock: "En stock",
  outofstock: "Agotado",
  onbackorder: "Disponible bajo pedido",
} as const;

const getStockLabel = (status: string) =>
  STOCK_LABELS[status as keyof typeof STOCK_LABELS] ??
  "Consultar disponibilidad";

const getStockClass = (status: string) => {
  switch (status) {
    case "instock":
      return "is-available";
    case "onbackorder":
      return "is-backorder";
    case "outofstock":
      return "is-unavailable";
    default:
      return "is-unknown";
  }
};

const priceText = product.priceText ?? "Consultar precio";
const stockLabel = getStockLabel(product.stockStatus);
const stockClass = getStockClass(product.stockStatus);
---

<div class="product-detail">
  <!-- Product Hero Section -->
  <section class="product-hero">
    <div class="container">
      <div class="product-media">
        <!-- Main Image -->
        <div class="main-image">
          {
            product.images.length > 0 ? (
              <img
                src={product.images[0].src}
                alt={product.images[0].alt || `Fotografía de ${product.name}`}
                loading="lazy"
                class="product-image"
              />
            ) : (
              <div class="image-fallback" aria-hidden="true" />
            )
          }
        </div>

        <!-- Image Gallery -->
        {
          product.images.length > 1 && (
            <div class="image-gallery">
              {product.images.slice(1, 5).map((image) => (
                <img
                  src={image.thumbnail}
                  alt={image.alt || `Imagen adicional de ${product.name}`}
                  loading="lazy"
                  class="gallery-thumb"
                />
              ))}
            </div>
          )
        }
      </div>

      <div class="product-info">
        <!-- Product Header -->
        <div class="product-header">
          <span class="tag">Ficha técnica</span>
          <h1 class="product-title">{product.name}</h1>
          {product.summary && <p class="product-summary">{product.summary}</p>}
        </div>

        <!-- Price and Stock -->
        <div class="product-pricing">
          <div class="price-section">
            <span class="price">{priceText}</span>
            {
              product.onSale && product.salePrice && (
                <span class="sale-badge">¡Oferta!</span>
              )
            }
          </div>
          <div class="stock-section">
            <span class={`stock ${stockClass}`}>{stockLabel}</span>
            {
              product.stockQuantity && (
                <span class="stock-quantity">
                  ({product.stockQuantity} unidades disponibles)
                </span>
              )
            }
          </div>
        </div>

        <!-- Categories -->
        {
          productCategories.length > 0 && (
            <div class="product-categories">
              <h3>Categorías</h3>
              <ul class="category-list">
                {productCategories.map((category) => (
                  <li class="category-item">
                    <span class="category-name">
                      {category?.name ?? "Categoría"}
                    </span>
                  </li>
                ))}
              </ul>
            </div>
          )
        }

        <!-- SKU -->
        {
          product.sku && (
            <div class="product-sku">
              <strong>SKU:</strong> {product.sku}
            </div>
          )
        }

        <!-- Physical State -->
        {
          product.physicalState && (
            <div class="product-physical-state">
              <strong>Estado Físico:</strong>{" "}
              <span class="physical-state-value">{product.physicalState}</span>
            </div>
          )
        }

        <!-- Metrics -->
        {
          (product.views !== undefined ||
            product.searches !== undefined ||
            product.totalQuotes !== undefined) && (
            <div class="product-metrics">
              <h3>Estadísticas del producto</h3>
              <div class="metrics-grid">
                {product.views !== undefined && (
                  <div class="metric-item">
                    <span class="metric-value">{product.views}</span>
                    <span class="metric-label">Vistas</span>
                  </div>
                )}
                {product.searches !== undefined && (
                  <div class="metric-item">
                    <span class="metric-value">{product.searches}</span>
                    <span class="metric-label">Búsquedas</span>
                  </div>
                )}
                {product.totalQuotes !== undefined && (
                  <div class="metric-item">
                    <span class="metric-value">{product.totalQuotes}</span>
                    <span class="metric-label">Cotizaciones</span>
                  </div>
                )}
              </div>
            </div>
          )
        }

        <!-- Presentations -->
        <div class="product-presentations">
          <label for="presentations">Presentaciones disponibles</label>
          <select id="presentations" data-product-select>
            {
              product.presentations.map((presentation) => (
                <option
                  value={presentation.id}
                  data-label={presentation.label}
                  data-minimum-order={presentation.minimumOrder || ""}
                >
                  {presentation.label}
                  {presentation.minimumOrder &&
                    ` (mínimo ${presentation.minimumOrder})`}
                </option>
              ))
            }
          </select>
          {
            product.presentations.map(
              (presentation) =>
                presentation.minimumOrder && (
                  <p
                    class="presentation-note"
                    data-presentation-note={presentation.id}
                    hidden
                  >
                    Pedido mínimo: {presentation.minimumOrder}
                  </p>
                ),
            )
          }
        </div>

        <!-- Product Actions -->
        <div class="product-actions">
          <button
            class="btn btn-primary"
            type="button"
            data-action="add-to-cart"
            data-product-id={product.id}
            data-product-name={product.name}
            data-product-slug={product.slug}
            data-product-image={product.image}
            data-product-presentation={product.presentations[0]?.label || ""}
            data-presentation-id={product.presentations[0]?.id || ""}
            data-product-price={product.price ?? ""}
            data-product-price-text={product.priceText ?? ""}
            data-product-stock-status={product.stockStatus}
          >
            Añadir al carrito de cotización
          </button>
          <a class="btn btn-outline" href="/cotizacion">
            Solicitar cotización
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Details Section -->
  <section class="product-details">
    <div class="container">
      <div class="details-grid">
        <!-- Description -->
        <div class="detail-section">
          <h2>Descripción del Producto</h2>
          {
            product.description ? (
              <div class="description-content">
                <p>{product.description}</p>
              </div>
            ) : (
              <p class="muted">No contamos con una descripción detallada.</p>
            )
          }
        </div>

        <!-- Specifications -->
        <div class="detail-section">
          <h2>Especificaciones Técnicas</h2>
          <div class="specifications">
            {
              product.weight && (
                <div class="spec-item">
                  <strong>Peso:</strong> {product.weight}
                </div>
              )
            }
            {
              product.dimensions && (
                <div class="spec-item">
                  <strong>Dimensiones:</strong>
                  {product.dimensions.length &&
                    ` L: ${product.dimensions.length}`}
                  {product.dimensions.width &&
                    ` W: ${product.dimensions.width}`}
                  {product.dimensions.height &&
                    ` H: ${product.dimensions.height}`}
                </div>
              )
            }
            {
              product.attributes.length > 0 && (
                <div class="spec-item">
                  <strong>Atributos:</strong>
                  <ul class="attributes-list">
                    {product.attributes.map((attr) => (
                      <li>
                        <strong>{attr.name}:</strong> {attr.options.join(", ")}
                      </li>
                    ))}
                  </ul>
                </div>
              )
            }
          </div>
        </div>

        <!-- Benefits and Features -->
        {
          product.heroHighlights.length > 0 && (
            <div class="detail-section">
              <h2>Beneficios y Características</h2>
              <ul class="benefits-list">
                {product.heroHighlights.map((highlight) => (
                  <li class="benefit-item">{highlight}</li>
                ))}
              </ul>
            </div>
          )
        }

        <!-- Tags -->
        {
          product.tags.length > 0 && (
            <div class="detail-section">
              <h2>Etiquetas</h2>
              <div class="tags-list">
                {product.tags.map((tag) => (
                  <span class="tag">{tag.name}</span>
                ))}
              </div>
            </div>
          )
        }

        <!-- Additional Info -->
        <div class="detail-section">
          <h2>Información Adicional</h2>
          <div class="additional-info">
            <div class="info-item">
              <strong>Ventas totales:</strong>
              {product.totalSales}
            </div>
            {
              product.averageRating > 0 && (
                <div class="info-item">
                  <strong>Calificación promedio:</strong>{" "}
                  {product.averageRating}/5 ({product.ratingCount} reseñas)
                </div>
              )
            }
            <div class="info-item">
              <strong>Fecha de creación:</strong>
              {new Date(product.createdAt).toLocaleDateString("es-PE")}
            </div>
            {
              product.purchaseNote && (
                <div class="info-item">
                  <strong>Nota de compra:</strong> {product.purchaseNote}
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<style>
  .product-detail {
    padding: 2rem 0;
  }

  .product-hero {
    background: #f8f9fa;
    padding: 3rem 0;
  }

  .product-hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .product-media {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-image {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 8px;
    background: white;
  }

