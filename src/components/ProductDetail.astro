    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .product-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0;
  }

  .product-summary {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .product-pricing {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  .price-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2563eb;
  }

  .sale-badge {
    background: #dc2626;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .stock-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .stock {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .stock.is-available {
    background: #dcfce7;
    color: #166534;
  }

  .stock.is-backorder {
    background: #fef3c7;
    color: #92400e;
  }

  .stock.is-unavailable {
    background: #fee2e2;
    color: #991b1b;
  }

  .stock.is-unknown {
    background: #f3f4f6;
    color: #6b7280;
  }

  .stock-quantity {
    font-size: 0.875rem;
    color: #666;
  }

  .product-categories h3 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: #374151;
  }

  .category-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .category-item {
    background: #e5e7eb;
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.875rem;
  }

  .product-sku {
    font-size: 0.875rem;
    color: #666;
  }

  .product-presentations {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .product-presentations label {
    font-weight: 600;
    color: #374151;
  }

  .product-presentations select {
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    background: white;
    font-size: 1rem;
  }

  .presentation-note {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }

  .product-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-primary {
    background: #2563eb;
    color: white;
  }

  .btn-primary:hover {
    background: #1d4ed8;
  }

  .btn-outline {
    background: transparent;
    color: #2563eb;
    border: 1px solid #2563eb;
  }

  .btn-outline:hover {
    background: #2563eb;
    color: white;
  }

  .product-details {
    padding: 3rem 0;
  }

  .details-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .detail-section {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }

  .detail-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #1a1a1a;
  }

  .description-content p {
    line-height: 1.6;
    color: #374151;
    margin: 0 0 1rem 0;
  }

  .specifications {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .spec-item {
    font-size: 0.875rem;
    color: #374151;
  }

  .attributes-list {
    margin: 0.5rem 0 0 0;
    padding-left: 1rem;
  }

  .attributes-list li {
    margin: 0.25rem 0;
  }

  .benefits-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .benefit-item {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f3f4f6;
    color: #374151;
  }

  .benefit-item:last-child {
    border-bottom: none;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tags-list .tag {
    background: #e5e7eb;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.875rem;
  }

  .additional-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .info-item {
    font-size: 0.875rem;
    color: #374151;
  }

  .muted {
    color: #9ca3af;
    font-style: italic;
  }

  .product-physical-state {
    font-size: 0.9375rem;
    color: var(--color-text);
    margin-bottom: 1rem;
  }

  .physical-state-value {
    text-transform: capitalize;
    color: var(--color-primary);
    font-weight: 600;
  }

  .product-metrics {
    margin: 1.5rem 0;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .product-metrics h3 {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: var(--color-heading);
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .metric-item {
    text-align: center;
    padding: 1rem;
    background: white;
    border-radius: 6px;
  }

  .metric-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .metric-label {
    display: block;
    font-size: 0.875rem;
    color: var(--color-muted);
  }

  @media (max-width: 768px) {
    .product-hero .container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .details-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }

    .metrics-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const select = document.querySelector("[data-product-select]");
    const notes = document.querySelectorAll("[data-presentation-note]");
    const button = document.querySelector(
      '.product-actions [data-action="add-to-cart"]',
    );

    const updateFromSelect = () => {
      if (
        !(select instanceof HTMLSelectElement) ||
        !(button instanceof HTMLElement)
      )
        return;
      const selected = select.selectedOptions[0];
      const label = selected?.dataset.label ?? "";
      button.setAttribute("data-product-presentation", label);
      button.setAttribute("data-presentation-id", selected?.value || "");
      notes.forEach((note) => {
        const shouldHide =
          !selected ||
          note.getAttribute("data-presentation-note") !== selected.value;
        note.toggleAttribute("hidden", shouldHide);
      });
    };

    select?.addEventListener("change", updateFromSelect);
    updateFromSelect();
  });
</script>
